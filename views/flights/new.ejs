<%- include('../partials/header') %>
    <form id="new-form" action="/flights" method="POST">
        <label class="addFlights">Flight's Airline:</label>
        <select class="addFlights"name="airline" text="please select">
            <option value="">Please Select</option>
            <option value="American">American</option>
            <option value="Southwest">Southwest</option>
            <option value="United">United</option>
        </select>
    </br><label class="addFlights">Airport</label>
        <select name="Airport" class="addFlights">
            <option value="DEN">DEN</option>
            <option value="DFW">DFW</option>
            <option value="AUS">AUS</option>
            <option value="LAX">LAX</option>
            <option value="SAN">SAN</option>
        </select>
    </br><label class="addFlights">Flight No.</label>
        <input type="number" name="flightNo" min="10" max="9999">
    </br> <label for="departs" class="addFlights">departure:</label>
        <input class="addFlights" type="date" name="departs" value="<%=year%>-<%=month%>-<%=day%>" min="2020-08-01" max="2025-06-14">
        
    </br><input type="submit" value="Add Flight">
    </form>
</main>
</body>

</html>